<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activities.AddCarAdminActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/editText_addCar_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/font_normal"
                android:hint="name" />

            <EditText
                android:id="@+id/editText_addCar_factory"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/font_normal"
                android:hint="factory" />
        </LinearLayout>

        <EditText
            android:id="@+id/editText_addCar_year"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font_normal"
            android:inputType="number"
            android:hint="year" />

        <EditText
            android:id="@+id/editText_addCar_kilometer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font_normal"
            android:inputType="number"
            android:hint="kilometer" />

        <EditText
            android:id="@+id/editText_addCar_color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font_normal"
            android:hint="color" />

        <CheckBox
            android:id="@+id/checkbox_addCar_automate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font_normal"
            android:hint="is automate" />

        <EditText
            android:id="@+id/editText_addCar_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font_normal"
            android:inputType="number"
            android:hint="price" />

        <Button
            android:id="@+id/button_addCar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Add Car" />
    </LinearLayout>
</ScrollView>